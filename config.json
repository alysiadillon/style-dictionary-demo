{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "styles/",
      "files": [
        {
          "format": "scss/variables",
          "destination": "global/_variables.scss",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "format": "scss/variables",
          "destination": "global/_fontSizes.scss",
          "filter": {
            "attributes": {
              "category": "size",
              "type": "font"
            }
          }
        },
        {
          "format": "scss/variables",
          "destination": "assets/_icons.scss",
          "filter": {
            "attributes": {
              "category": "content",
              "type": "icon"
            }
          }
        }
      ]
    }
  }
}
